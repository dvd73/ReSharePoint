@if (Model != null)
{ 
<div>
	<h3 class="title" @ViewHelper.Edit(Model,"name")>@Html.Raw(Model.name ?? "")</h3>
	<div class="content">
		<div @ViewHelper.Edit(Model,"position")>@Html.Raw(Model.position ?? "")</div>
		<div @ViewHelper.Edit(Model,"content")>@Html.Raw(Model.content ?? "")</div>
	</div>
</div>
}